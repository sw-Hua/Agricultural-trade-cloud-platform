<view class="pyg_index">
  <!-- 搜索框结构 开始 -->
  <SearchInput></SearchInput>
  <!-- 搜索框结构 结束 -->
  <!-- 轮播图 开始 -->
  <view class="index_swipper">
    <swiper autoplay="true" indicator-dots="true" circular="true">
      <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
        <navigator><image src="{{item.image_src}}" mode="widthFix"></image></navigator>
      </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图 结束 -->
  <!-- 导航 开始 -->
  <view class="index_cate">
  <navigator wx:for="{{catesList}}" wx:key="name">
    <image mode="widthFix" src="{{item.image_src}}"></image>
  </navigator>
  </view>
  <!-- 导航 结束 -->
  <!-- 楼层 开始 -->
  <view class="index_floor">
    <view class="floor_group" wx:for="{{floorList}}" 
      wx:for-item="item1" wx:for-index="index1" wx:key="floor_title">
      <!-- 标题 -->
      <view class="floor_title"><image mode="widthFix" src="{{item1.floor_title.image_src}}"></image></view>
      <!-- 内容 -->
      <view class="floor_list">
        <navigator 
        wx:for="{{item1.product_list}}"
        wx:for-item="item2" wx:for-index="index2" wx:key="name"
        >
        <image mode="{{index2===0?'widthFix':'scaleToFill'}}" src="{{item2.image_src}}"></image>
        </navigator>
      </view>
    </view>
  </view>
  <!-- floorList:[image_src product_list:[五张图片], image_src product_list:[五张图片], image_src product_list:[五张图片]] -->
  <!-- 楼层 结束 -->
  
  
</view>